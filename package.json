{
  "name": "multitool",
  "version": "0.1.0",
  "author": "Egor Kharlamov",
  "description": "Multiple lit projects in one platform",
  "engines": {
    "node": "18.16.0",
    "pnpm": "8.5.0",
    "npm": "9.5.1"
  },
  "scripts": {
    "build": "pnpm run clean && nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "pnpm run build && pnpm run generate && pnpm run postinstall && nuxt preview",
    "postinstall": "nuxt prepare",
    "clean": "./node_modules/.bin/rimraf ./dist ./.output ./.nuxt",
    "lint:js": "eslint --ext \".ts,.vue\" --cache --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lint": "pnpm lint:js && pnpm lint:prettier",
    "lintfix": "prettier --write --list-different . && pnpm lint:js --fix",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "pnpm run lintfix",
      "git add"
    ]
  },
  "devDependencies": {
    "@nuxtjs/eslint-config-typescript": "12.0.0",
    "@nuxtjs/eslint-module": "4.0.2",
    "@nuxtjs/tailwindcss": "6.6.8",
    "@tailwindcss/forms": "0.5.3",
    "@tailwindcss/typography": "0.5.9",
    "@types/node": "18",
    "@typescript-eslint/parser": "5.59.5",
    "eslint": "8.40.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "nuxt": "3.4.3",
    "prettier": "2.8.8",
    "rimraf": "5.0.0",
    "typescript": "5.0.4",
    "vite": "4.3.5",
    "webpack": "5.82.1"
  },
  "dependencies": {
    "@heroicons/vue": "2.0.18",
    "@pinia/nuxt": "0.4.11",
    "pinia": "2.1.3",
    "vue-toastification": "2.0.0-rc.5"
  }
}
